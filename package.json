{
  "name": "goodthing",
  "description": "For making new Preact projects with server-side rendering, es modules and NO compilation during development",
  "version": "1.0.0",
  "author": "Kynan Stewart",
  "bugs": {
    "url": "https://github.com/k7n4n5t3w4rt/goodthing/issues"
  },
  "dependencies": {
    "htm": "^3.0.4",
    "immer": "^7.0.15",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.9",
    "preact-router": "^3.2.1",
    "simple-json-db": "^1.2.2"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "fixpack": "^3.0.6",
    "flow-bin": "^0.123.0",
    "glob": "^7.1.6",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.0",
    "should": "^13.2.3",
    "wait-on": "^5.1.0"
  },
  "scripts": {
    "cloudrun:build": "gcloud builds submit --tag gcr.io/helpful-emitter-147506/benkobot-frontend",
    "cloudrun:deploy": "gcloud run deploy --image gcr.io/helpful-emitter-147506/benkobot-frontend --platform managed",
    "docker:build": "docker build -t benkobot-frontend .",
    "docker:clean:containers": "docker rm -f $(docker ps -a -q)",
    "docker:clean:images": "docker rmi -f $(docker images -a -q)",
    "docker:compose": "docker-compose up --build",
    "docker:run": "docker run -p 4000:4000 benkobot-frontend --build",
    "fixpack": "fixpack",
    "flow": "flow check",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx}\"",
    "start": "node server/index.js",
    "start:dev": "node -r dotenv/config server/index.js",
    "testy": "node --no-warnings server/testyrunner.js | faucet",
    "test": "npm run testy"
  },
  "type": "module"
}
